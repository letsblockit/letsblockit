{{#if active_filters }}
    <h2>Active filter templates{{#if tag_search}} with tag <em>{{tag_search}}</em>{{/if}}</h2>

    <div class="p-2 mb-3 row row-cols-1 row-cols-lg-2 row-cols-xl-3 g-4">
        {{#each active_filters}}
            {{>list-filter-card}}
        {{/each}}
    </div>
{{/if}}

{{#if available_filters }}
    <h2>Available filter templates{{#if tag_search}} with tag <em>{{tag_search}}</em>{{/if}}</h2>
    <div class="p-2 row row-cols-1 row-cols-lg-2 row-cols-xl-3 g-4">
        {{#each available_filters}}
            {{>list-filter-card}}
        {{/each}}
    </div>
{{/if}}
